<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.dtdt.DormManager.controller.LoginController"
            prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #F4F7FC;">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="40.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets left="20.0"/>
            </padding>
            <Text text="Dorm Management System (SIGN IN)" fill="#333333">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Text>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0" maxWidth="400">
            <VBox alignment="CENTER" spacing="5.0"
                  style="-fx-background-color: #FFFFFF; -fx-padding: 35 40 35 40; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0.4, 0, 2);">

                <Text text="Dorm Management System" wrappingWidth="320.0" textAlignment="CENTER">
                    <font><Font name="System Bold" size="20.0"/></font>
                </Text>
                <Text text="Sign in to your account to continue" fill="#666666" wrappingWidth="320.0" textAlignment="CENTER">
                    <font><Font size="13.0"/></font>
                </Text>

                <VBox spacing="15.0" alignment="CENTER">
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                    
                    <VBox spacing="5.0" prefWidth="320.0">
                        <Label text="Student ID">
                            <font><Font size="12.0"/></font>
                        </Label>
                        <TextField fx:id="studentIdField" promptText="Enter your student ID"
                                   style="-fx-padding: 10; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #E0E0E0;"/>
                    </VBox>
                    
                    <VBox spacing="5.0" prefWidth="320.0">
                        <Label text="Email">
                            <font><Font size="12.0"/></font>
                        </Label>
                        <TextField fx:id="emailFieldLogin" promptText="your.email@university.edu"
                                   style="-fx-padding: 10; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #E0E0E0;"/>
                    </VBox>
                    
                    <VBox spacing="5.0" prefWidth="320.0">
                        <Label text="Password">
                            <font><Font size="12.0"/></font>
                        </Label>
                        <StackPane>
                            <PasswordField fx:id="passwordFieldLogin" promptText="Enter your password"
                                          style="-fx-padding: 10 35 10 10; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #E0E0E0;"/>
                            <TextField fx:id="passwordTextFieldLogin" promptText="Enter your password" visible="false"
                                      style="-fx-padding: 10 35 10 10; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #E0E0E0;"/>
                            <HBox alignment="CENTER_RIGHT" pickOnBounds="false">
                                <Button fx:id="togglePasswordLoginBtn" text="ðŸ‘" onAction="#togglePasswordVisibilityLogin"
                                        style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-cursor: hand; -fx-font-size: 18; -fx-border-width: 0;"
                                        prefHeight="30">
                                    <HBox.margin>
                                        <Insets right="8.0"/>
                                    </HBox.margin>
                                </Button>
                            </HBox>
                        </StackPane>
                    </VBox>
                    
                    <Label fx:id="loginErrorLabel" text="" textFill="#FF3B30" visible="false" managed="false" wrapText="true" prefWidth="320.0" textAlignment="CENTER">
                        <font><Font size="11.0"/></font>
                    </Label>

                    <Button fx:id="signInButton" text="Sign In" onAction="#onSignInClick"
                            prefWidth="320.0" prefHeight="42.0"
                            style="-fx-background-color: #1A1A1A; -fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-background-radius: 6; -fx-cursor: hand;"
                            onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited">
                        <font><Font size="13.0"/></font>
                    </Button>
                </VBox>

                <HBox alignment="CENTER" spacing="5.0">
                    <padding>
                        <Insets top="5.0" />
                    </padding>
                    <Text text="Need a room?">
                        <font><Font size="12.0"/></font>
                    </Text>
                    <Text text="Make a Reservation" style="-fx-fill: #007AFF; -fx-font-weight: bold; -fx-cursor: hand;"
                          onMouseClicked="#goToReservation">
                        <font><Font size="12.0"/></font>
                    </Text>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>