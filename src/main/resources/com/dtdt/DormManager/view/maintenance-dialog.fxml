<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dtdt.DormManager.controller.MaintenanceDialogController" style="-fx-padding: 20; -fx-background-color: #FFFFFF; -fx-background-radius: 8;">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <Label text="Request Maintenance" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <Label text="Type" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox fx:id="typesComboBox" prefWidth="320" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Description" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextArea fx:id="descriptionArea" promptText="Short description of the issue" prefRowCount="5" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2" style="-fx-alignment: center_right; -fx-padding: 10 0 0 0;">
        <Button fx:id="cancelButton" text="Cancel" onAction="#onCancel" />
        <Button fx:id="submitButton" text="Submit Request" style="-fx-background-color: #1A1A1A; -fx-text-fill: white;" onAction="#onSubmit" />
    </HBox>

</GridPane>
