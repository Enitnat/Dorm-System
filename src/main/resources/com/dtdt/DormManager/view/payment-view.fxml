<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane style="-fx-background-color: #F4F7FC;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dtdt.DormManager.controller.PaymentController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #1A1A1A;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <Text fill="WHITE" text="Payment Registration">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Text>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Pane prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: #E0E0E0; -fx-background-radius: 30;" />
                <VBox>
                    <Label fx:id="tenantNameLabel" text="Tenant Name" textFill="#1a1a1a">
                        <font><Font name="System Bold" size="24.0" /></font>
                    </Label>
                    <Label fx:id="tenantIdLabel" text="Tenant ID" textFill="#555555">
                        <font><Font size="16.0" /></font>
                    </Label>
                </VBox>
                <Pane HBox.hgrow="ALWAYS" /> <Hyperlink onAction="#goToDashboard" text="Dashboard" />
                <Hyperlink onAction="#onProfileClick" text="Profile" />
                <Hyperlink text="Payment" style="-fx-font-weight: bold; -fx-underline: true;" />
                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="tenantEmailLabel" text="tenant@test.com" textFill="#1a1a1a">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                    <Label text="Tenant" textFill="#555555" />
                </VBox>
                <Hyperlink onAction="#onLogoutClick" text="Logout" />
            </HBox>

            <HBox spacing="30.0">
                <VBox>
                    <Label fx:id="buildingLabel" text="Loading..." textFill="#1a1a1a">
                        <font><Font name="System Bold" size="48.0" /></font>
                    </Label>
                    <Label fx:id="roomLabel" text="Loading..." textFill="#555555">
                        <font><Font size="24.0" /></font>
                    </Label>
                </VBox>
                <Pane HBox.hgrow="ALWAYS" /> <VBox alignment="TOP_RIGHT" spacing="10.0">
                <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 8; -fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-radius: 8;">
                    <Label text="Contract Type" textFill="#555555" />
                    <Label fx:id="contractTypeLabel" text="Loading..." textFill="#1a1a1a">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                    <Label text="Date Start - Date End" textFill="#555555" />
                    <Label fx:id="contractDatesLabel" text="Loading..." textFill="#1a1a1a">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                </VBox>
            </VBox>
            </HBox>

            <Line endX="1180.0" stroke="#D0D0D0" strokeWidth="0.5" />

            <HBox spacing="30.0" VBox.vgrow="ALWAYS">
                <VBox prefWidth="350.0" spacing="15.0">
                    <Label text="REQUEST RECEIPT:">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                    <Label text="Select a paid invoice to download its receipt." />
                    <ComboBox fx:id="receiptComboBox" prefWidth="300.0" promptText="Select a paid invoice" />
                    <Button fx:id="savePdfButton" onAction="#savePDF" style="-fx-background-color: #1A1A1A; -fx-text-fill: WHITE;" text="Save PDF" />
                    <Label fx:id="validationMessageLabel" textFill="RED" visible="false" managed="false" />
                </VBox>

                <VBox HBox.hgrow="ALWAYS" spacing="10.0">
                    <Label text="MONTHLY INVOICES:">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background-insets: 0;" VBox.vgrow="ALWAYS">
                        <VBox fx:id="billingHistoryVBox" spacing="15.0" />
                    </ScrollPane>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>